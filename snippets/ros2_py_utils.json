{
    "ros2_launch_template": {
        "prefix": "ros2_launch_template",
        "body": [
            "import launch",
            "import launch_ros.actions",
            "",
            "def generate_launch_description():",
            "    return launch.LaunchDescription(",
            "        [",
            "            launch_ros.actions.Node(",
            "                package='${1:package_name}',",
            "                executable='${2:executable_name}',",
            "                name='${3:node_name}',",
            "            )",
            "        ]",
            "    )"
        ],
        "description": "ROS2 launch in python template"
    },
    "ros2_launch_config_in_setup_py": {
        "prefix": "ros2_launch_file_python_config",
        "body": [
            "(os.path.join('share', package_name, 'launch'), glob(os.path.join('launch', '*launch.[pxy][yma]*')))",
        ],
        "description": "ROS2 Launch File Config in setup.py"
    }
}
