{
    "rclcpp::init": {
        "prefix": "rclcpp_init",
        "body": "rclcpp::init(argc, argv);",
        "description": "rclcpp_init"
    },
    "rclcpp::spin": {
        "prefix": "rclcpp_spin",
        "body": "rclcpp::spin(std::make_shared<${1:Node_Class}>());",
        "description": "rclcpp_spin"
    },
    "rclcpp::shutdown": {
        "prefix": "rclcpp_shutdown",
        "body": "rclcpp::shutdown();",
        "description": "rclcpp_shutdown"
    },
    "rclcpp_info_OOP": {
        "prefix": "rclcpp_info_OOP",
        "body": "RCLCPP_INFO(this->get_logger(), \"Logging: '%s'\", message.data.c_str());",
        "description": "RCLCPP_INFO"
    },
    "rclcpp_action_visibility_control_header_file": {
        "prefix": "rclcpp_action_visibility_control_header_file_code",
        "body": [
            "#ifndef ${1:PREFIX}__VISIBILITY_CONTROL_H_",
            "#define ${2:$1}__VISIBILITY_CONTROL_H_",
            "",
            "#ifdef __cplusplus",
            "extern \"C\"",
            "{",
            "#endif",
            "",
            "// This logic was borrowed (then namespaced) from the examples on the gcc wiki:",
            "//     https://gcc.gnu.org/wiki/Visibility",
            "",
            "#if defined _WIN32 || defined __CYGWIN__",
            "  #ifdef __GNUC__",
            "    #define ${2:$1}_EXPORT __attribute__ ((dllexport))",
            "    #define ${2:$1}_IMPORT __attribute__ ((dllimport))",
            "  #else",
            "    #define ${2:$1}_EXPORT __declspec(dllexport)",
            "    #define ${2:$1}_IMPORT __declspec(dllimport)",
            "  #endif",
            "  #ifdef ${2:$1}_BUILDING_DLL",
            "    #define ${2:$1}_PUBLIC ${2:$1}_EXPORT",
            "  #else",
            "    #define ${2:$1}_PUBLIC ${2:$1}_IMPORT",
            "  #endif",
            "  #define ${2:$1}_PUBLIC_TYPE ${2:$1}_PUBLIC",
            "  #define ${2:$1}_LOCAL",
            "#else",
            "  #define ${2:$1}_EXPORT __attribute__ ((visibility(\"default\")))",
            "  #define ${2:$1}_IMPORT",
            "  #if __GNUC__ >= 4",
            "    #define ${2:$1}_PUBLIC __attribute__ ((visibility(\"default\")))",
            "    #define ${2:$1}_LOCAL  __attribute__ ((visibility(\"hidden\")))",
            "  #else",
            "    #define ${2:$1}_PUBLIC",
            "    #define ${2:$1}_LOCAL",
            "  #endif",
            "  #define ${2:$1}_PUBLIC_TYPE",
            "#endif",
            "",
            "#ifdef __cplusplus",
            "}",
            "#endif",
            "",
            "#endif  // ${1:PREFIX}__VISIBILITY_CONTROL_H_"
        ],
        "description": "Creates a visibility control header with a specified prefix."
    }
}
